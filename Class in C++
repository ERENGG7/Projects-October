#include <iostream>
using namespace std;
 
class Person {
private:
	string name;
	int age;
public:
	Person(string n, int a) {
		name = n;
		age = a;
	}
	void Info() {
		cout << "Name:" << name << " And his/her age is:" << age << endl;
	}
};
int main()
{
	Person A("Ivan",18);
	Person B("Georgi", 19);
	Person C("Andrey", 22);
 
	A.Info();
	B.Info();
	C.Info();
	return 0;
}
