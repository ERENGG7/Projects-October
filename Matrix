#include <iostream>
using namespace std;
 
int main() {
    const int rows = 3;
    const int cols = 4;
 
    int matrix[rows][cols];
 
 
    cout << "Enter values for a 3x4 matrix:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matrix[i][j];
        }
    }
 
 
    cout << "\nMatrix:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << matrix[i][j] << "\t";
        }
        cout << endl;
    }
 
    return 0;
}
